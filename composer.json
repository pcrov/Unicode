{
    "name": "pcrov/unicode",
    "homepage": "https://github.com/pcrov/unicode",
    "description": "Miscellaneous Unicode utility functions",
    "license": "MIT",
    "minimum-stability": "stable",
    "authors": [
        {
            "name": "Paul Crovella",
            "role": "developer"
        }
    ],
    "require": {
        "php": "^7.0"
    },
    "suggest": {
        "ext-pcre": "Fast driver for some operations, particularly when compiled with Unicode property support and jit is enabled.",
        "ext-iconv": "Fast driver for some operations.",
        "ext-mbstring": "Quick driver for some operations."
    },
    "require-dev": {
        "phpunit/phpunit": "^5.2"
    },
    "autoload": {
        "psr-4": {
            "pcrov\\Unicode\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "pcrov\\Unicode\\": "test/"
        }
    }
}
